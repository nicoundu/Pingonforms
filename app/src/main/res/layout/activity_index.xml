<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IndexActivity">


    <TextView
        android:id="@+id/facebookTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/facebook_icon"
        android:fontFamily="@font/vegur_bold"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/facebookTv"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/linkedinTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/linkedin_icon"
        android:fontFamily="@font/vegur_bold"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/linkedinTv"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/webPageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/pingon_small_icon"
        android:fontFamily="@font/vegur_bold"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/webpageTv"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/equipmentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/pingon_tower_crane_icon"
        android:fontFamily="@font/vegur_bold"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/equipmentTv"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contactTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/baseline_phone_black_24"
        android:fontFamily="@font/vegur_bold"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/contactTv"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/applyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/apply_icon"
        android:fontFamily="@font/vegur_bold"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/applyTv"
        android:textSize="20sp" />


</LinearLayout>