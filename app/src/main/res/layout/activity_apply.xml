<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplyActivity"
    android:orientation="vertical">

    <EditText
        android:inputType="textPersonName"
        android:padding="16dp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/nameEt"
        android:hint="@string/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="phone"
        android:padding="16dp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/phoneEt"
        android:hint="@string/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/mailEt"
        android:hint="@string/mailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="16dp"
        android:id="@+id/interestareaEt"
        android:fontFamily="@font/vegur_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/interestareaEt"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/interestareaRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/administrationRb"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operatorsRb"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/electromechanicRb"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operationsRb"/>

    </RadioGroup>

    <Button
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/sendBt"
        android:text="@string/sendBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>