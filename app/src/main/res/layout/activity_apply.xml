<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/nameEt"
        android:hint="@string/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="18sp"
        android:inputType="phone"
        android:padding="16dp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/phoneEt"
        android:hint="@string/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/mailEt"
        android:hint="@string/mailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="16dp"
        android:id="@+id/interestareaEt"
        android:fontFamily="@font/vegur_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/interestareaEt"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/interestareaDd"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:scrollbarSize="18dp"
        android:textSize="18sp">

    </Spinner>

    <Button
        android:textSize="18sp"
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/sendBt"
        android:text="@string/sendBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>