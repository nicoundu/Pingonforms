<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TowerCraneFragment">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/background_tower_cranes"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vegur_bold"
        android:paddingStart="16dp"
        android:text="@string/towercraneIb"
        android:textSize="30sp" />

    <EditText
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/nameinputEt"
        android:text="Ingrese su nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:fontFamily="@font/vegur_bold"
        android:id="@+id/mailinputEt"
        android:text="Ingrese su correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/vegur_bold"
        android:padding="16dp"
        android:textSize="18sp"
        android:text="Seleccione el modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:fontFamily="@font/vegur_bold"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:fontFamily="@font/vegur_bold"
            android:text="GP 40.10 (40 metros de pluma y 1 tonelada en punta)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:fontFamily="@font/vegur_bold"
            android:text="GP 45.11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:fontFamily="@font/vegur_bold"
            android:text="GP 51.13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:fontFamily="@font/vegur_bold"
            android:text="GP 54.25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:fontFamily="@font/vegur_bold"
            android:text="PT 563.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>





</LinearLayout>